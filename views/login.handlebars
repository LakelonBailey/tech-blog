<div class="login-box">
    <h2 class="title is-size-4">Sign in</h2>
  <form class="login-form">
    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="email" id="email-login" placeholder="Email">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>
    <div class="field">
        <div class="control has-icons-left">
            <input class="input" type="password" name="password" autocomplete="current-password" required="" id="password-login" placeholder="Password">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </div>
    </div>
    <div class="control">
      <button type="submit" class="button is-success is-small auth-btn">Login</button>
    </div>
  </form>
</div>

<div class="signup-box">
  <h2 class="title is-size-4">Sign up</h2>
  <form class="signup-form">
    <div class="field">
        <div class="control has-icons-left">
            <input class="input" type="text" name="username" autofocus="" autocapitalize="none" autocomplete="username" required="" id="username-signup" placeholder="Username">
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
            </span>
        </div>
    </div>
    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="email" id="email-signup" placeholder="Email">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>
    <div class="field">
        <div class="control has-icons-left">
            <input class="input" type="password" name="password" autocomplete="current-password" required="" id="password-signup" placeholder="Password">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </div>
    </div>
    <div class="control">
      <button type="submit" class="button is-small auth-btn">Signup</button>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>