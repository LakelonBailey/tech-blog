<div class="dashboard">
  <div class="box">
    <section>
    <h2 class="title is-size-4">Create New Post</h2>

    <form class="new-post-form">
      <div class="field">
        <label for="post-title label" class="label">Title</label>
        <div class="control">
          <input class="input" type="text" id="post-title" name="post-title" />
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="post-text"></textarea>
        </div>
      </div>
      <button type="submit" class="button is-success">Create</button>
    </form>
  </section>
</div>
{{#if posts.length}}
  <div class="box post-box">
    <section>
      <h2 class="title is-size-4">Your Posts</h2>
      <ol class="post-list">
        {{#each posts as |post|}}
        <li>
          <article class="post"> 
            {{> post-info post}}
            <p><span><a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a></span> - <span><a href="/dashboard/edit/{{post.id}}">Edit</a></span></p>
          </article>
        </li>
        {{/each}}
      </ol>
    </section>

  </div>
{{/if}}
</div>

<script src="/javascript/add-post.js"></script>