<div class="dashboard">
  <div class="box">
    <section>
    <h2 class="title is-size-4">Create New Post</h2>

    <form class="new-post-form">
      <div class="field">
        <label for="post-title label" class="label">Title</label>
        <div class="control">
          <input class="input" type="text" id="post-title" name="post-title" />
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="post-text"></textarea>
        </div>
      </div>
      <button type="submit" class="button is-success">Create</button>
    </form>
  </section>
</div>
<div class="box post-box">
  {{#if posts.length}}
  <section>
    <h2 class="title is-size-4">Your Posts</h2>
    <ol class="post-list">
      {{#each posts as |post|}}
      <li>
        <article class="post"> 
          {{> post-info post}}
          <a href="/dashboard/edit/{{post.id}}">Edit</a>
        </article>
      </li>
      {{/each}}
    </ol>
  </section>
  {{/if}}

</div>
</div>

<script src="/javascript/add-post.js"></script>